{% extends 'base.html.twig' %}

{% block title %}New product{% endblock %}

{% block body %}
<div class="container">
    {% if app.user %}
            <div class="float-right">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
    {% endif %}
    <a href="{{ path('list') }}"><button class="btn btn-primary">List Products</button></a>
    <div class="example-wrapper">
        <br>
        <h2>Add product</h2>
        {{ form_start(AddProduct) }}
            {{ form_row(AddProduct.name) }}
            <br>
            {{ form_row(AddProduct.price) }}
            <br>
            {{ form_row(AddProduct.description) }}
            <br>
            {{ form_row(AddProduct.img) }}
            <br>
            <button class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
        {{ form_end(AddProduct) }}
        <br><br>
        {% if SuccessMsg != '' %}
            <div class="alert alert-success" role="alert">
                {{ SuccessMsg }}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
